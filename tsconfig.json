{
  "compilerOptions": {
    "target": "esnext", //指定ECMAScript目标版本。许可值为“es3”、“es5”、“es6”、“es2015”、“es2016”、“es2017”、“es2018”或“esnext”。
    "module": "esnext",//指定模块代码生成:“none”、“commonjs”、“amd”、“system”、“umd”、“es2015”或“esnext”
    "removeComments": false,
    "declaration": true,
    "outDir": "./lib",
    "declarationDir": "./lib",
    "baseUrl": "./",
    "jsx": "react",
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "allowJs": false,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "global.d.ts",
      "typings"
    ],
    "lib": [
      "dom",
      "es2015"
    ],
    "sourceMap": false,
    "noImplicitAny": false
  },
  "files": [
    "./src/lib/index.ts"
  ],
  "include": [
    "src/lib/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}



